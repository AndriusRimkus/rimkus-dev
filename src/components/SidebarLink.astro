---
interface Props {
    href: string;
    title: string;
    isActive: boolean;
}

const { href, title, isActive } = Astro.props;
---

<a
    href={href}
    class:list={[
        'block rounded px-3 py-2 transition-colors',
        isActive
            ? 'bg-indigo-100 font-medium text-indigo-700'
            : 'text-neutral-600 hover:bg-neutral-100 hover:text-neutral-900',
    ]}
>
    {title}
</a>
