---
interface Props {
    color?: 'indigo' | 'green' | 'blue' | 'purple' | 'red';
}

const { color = 'indigo' } = Astro.props;

const colorClasses = {
    indigo: 'border-indigo-500 from-indigo-50',
    green: 'border-green-500 from-green-50',
    blue: 'border-blue-500 from-blue-50',
    purple: 'border-purple-500 from-purple-50',
    red: 'border-red-500 from-red-50',
};

const borderColor = colorClasses[color];
---

<div
    class={`border-l-4 ${borderColor} pl-6 py-2 mb-4 bg-gradient-to-r to-transparent print:to-white text-lg *:m-0`}
>
    <slot />
</div>
